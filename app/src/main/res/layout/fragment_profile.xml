                    android:id="@+id/mother_name_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mother's name :"
                    android:typeface="serif"/>

                <TextView
                    android:id="@+id/mother_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mother_name_holder"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:typeface="sans"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Mother's name"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Dob-->
            <RelativeLayout
                android:id="@+id/edit_dob"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/dob_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Of Birth :"
                    android:typeface="serif"/>

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dob_holder"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:typeface="sans"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="2nd October 1992"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Phone number-->
            <RelativeLayout
                android:id="@+id/edit_ph"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/ph_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number :"
                    android:typeface="serif"/>

                <TextView
                    android:id="@+id/ph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/ph_holder"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:typeface="sans"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="8017047541"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Email -->
            <RelativeLayout
                android:id="@+id/edit_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/email_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail :"
                    android:typeface="serif"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/email_holder"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:typeface="sans"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="san.work02@gmail.com"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Address-->
            <RelativeLayout
                android:id="@+id/edit_add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/add_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address :"
                    android:typeface="serif"/>

                <TextView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add_holder"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:typeface="sans"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:ems="90"
                    android:lines="3"
                    android:text="@string/demo_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- USN segment -->
